<!doctype html>
<html>
  <head>
    <link rel="stylesheet" href="css/normalize/normalize.css">
    <link rel="stylesheet" href="css/codemirror/lib/codemirror.css">
    <link rel="stylesheet" href="css/main.css">
  </head>
  <body>
    <div class="page">
      <div class="demo">
        <div class="d-operator">
          <label for="theme">theme</label>
          <select class="js-theme">
            {{#each themeOptions}}
              <option>{{this}}</option>
            {{/each}}
          </select>
        </div>

        <div class="d-content">
          <div class="tab">
            <div class="tab-titles clearfix">
              <div class="tab-title" data-tab-idx="0">HTML</div>
              <div class="tab-title" data-tab-idx="1">Javascript</div>
              <div class="tab-title" data-tab-idx="2">CSS</div>
            </div>
            <div class="tab-contents">
              <div class="tab-content">
                <textarea id="type-html" class="js-code-mirror">{{htmlTpl}}</textarea>
              </div>
              <div class="tab-content">
                <textarea id="type-js" class="js-code-mirror">{{jsTpl}}</textarea>
              </div>
              <div class="tab-content">
                <textarea id="type-css" class="js-code-mirror">{{cssTpl}}</textarea>
              </div>
            </div>
          </div>

        </div>

        <div class="d-result">
        </div>
      </div>
    </div>
    
    <script src="js/codemirror/lib/codemirror.js"></script>
    <script src="js/codemirror/mode/xml/xml.js"></script>
    <script src="js/codemirror/mode/javascript/javascript.js"></script>
    <script src="js/codemirror/mode/css/css.js"></script>
    <script src="js/main.js"></script>
  </body>
</html>
